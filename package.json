{
	"name": "red_tetrisboilerplate",
	"version": "0.0.1",
	"author": "redpelicans",
	"license": "MIT",
	"scripts": {
		"eslint": "eslint src",
		"client-dist": "NODE_ENV=production webpack --progress --colors",
		"client-dev": "webpack-dev-server --colors --hot --inline --host 0.0.0.0 --port 8080 --disable-host-check",
		"srv-dev": "DEBUG=tetris:* babel-watch -w src src/server/main.js",
		"srv-dist": "DEBUG=tetris:* babel src --out-dir dist",
		"test": "mocha --require babel-core/register --reporter spec",
		"coverage": "NODE_ENV=test nyc --include src --all -r text -r lcov -r text --require babel-core/register mocha "
	},
	"dependencies": {
		"@material-ui/core": "^4.7.2",
		"@material-ui/icons": "^4.5.1",
		"@use-it/event-listener": "^0.1.3",
		"ramda": "^0.26.1",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-redux": "^4.4.5",
		"redux": "^3.5.2",
		"redux-logger": "^2.6.1",
		"redux-socket.io": "^1.4.0",
		"redux-thunk": "^2.0.1",
		"socket.io": "^1.4.6",
		"socket.io-client": "^2.3.0"
	},
	"devDependencies": {
		"babel-cli": "^6.7.7",
		"babel-core": "^6.7.7",
		"babel-eslint": "^6.1.0",
		"babel-loader": "^6.2.4",
		"babel-plugin-__coverage__": "^0.111111.1",
		"babel-preset-es2015": "^6.6.0",
		"babel-preset-react": "^6.5.0",
		"babel-preset-stage-0": "^6.5.0",
		"babel-watch": "^2.0.2",
		"chai": "^3.5.0",
		"chai-as-promised": "^5.3.0",
		"chai-equal-jsx": "^1.0.9",
		"css-loader": "^3.2.0",
		"eslint": "^2.13.1",
		"eslint-plugin-babel": "^3.3.0",
		"eslint-plugin-react": "^5.2.2",
		"mocha": "^10.1.0",
		"nyc": "^15.1.0",
		"style-loader": "^1.0.0",
		"webpack": "^1.13.0",
		"webpack-dev-middleware": "^1.6.1",
		"webpack-dev-server": "^3.1.11",
		"webpack-hot-middleware": "^2.10.0"
	},
	"nyc": {
		"exclude": [
			"build"
		]
	},
	"babel": {
		"presets": [
			"es2015",
			"react",
			"stage-0"
		]
	}
}
